<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="true">
        <shape>
            <solid
                android:color="@color/colorRojo"/>
            <corners
                android:radius="15dp"/>
            <stroke android:color="@color/colorBlanco"
                android:width="3dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid
                android:color="@color/colorPlomoClaro"/>
            <corners
                android:radius="15dp"/>
            <stroke android:color="@color/colorBlanco"
                android:width="2dp"/>
        </shape>
    </item>
</selector>